<main>
    <div class="container-fluid" id="transactionTable">
        <div class="col-8">
    {{#if hasTransactions}}
    <table class="table table-striped table-bordered" id="trscTable">
        <thead class="table-dark">
        <tr><th> Type </th><th> Amount </th> <th> Date </th><th>Category</th><th>Description</th><th>Actions</th></tr>
        </thead>
        <tbody>
        {{#each transactions}}
        <tr>
            <td> {{this.type}}</td>
            <td> {{this.amount}}</td>
            <td> {{this.date}} </td>
            <td> {{this.category}}</td>
            <td> {{this.description}}</td>
            <td>
<!--            <form action="delete/{{this.id}}" method="get" >-->
                <button type="submit">
                    Delete
                </button>
<!--            <form action="edit/{{this.id}}" method="get" >-->
                <button type="submit">
                    Edit
                </button>
            </td>
        </tr>
        {{/each}}
        </tbody>
    </table>
    {{else}}
        <h2> No Transactions found</h2>
    {{/if}}
    <a href="/add"> Add New Product </a>
        </div>

    </div>
</main>